<h1 class="center">All Categories</h1>

<%= link_to 'Add Category', new_category_path, class: 'btn btn-primary' if logged_in? and current_user.admin? %>

<div class="center">
  <%= will_paginate %>
</div>

<% @categories.each do |category| %>
<ul class="listing">
  <div class="row center">
    <div class="well col-md-4 col-md-offset-4">
      <li class="article-title">
        <%= link_to category.name, category_path(category) %>
      </li>
      <li><small><%= pluralize(category.articles.count, 'article') %></small></li>
    </div>
  </div>
</ul>
<% end %>

<div class="center">
  <%= will_paginate %>
</div>
