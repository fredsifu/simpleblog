<h1 class="center">Log in</h1>

<div class="row">
  <div class="class-xs-12">
    <%= form_for :session, html: { class: 'form-horizontal', role: 'form' }, url: login_path do |f| %>
      <div class="form-group">
        <%= f.label :email, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.email_field :email, class: 'form-control', placeholder: 'Enter your email to login', autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.password_field :password, class: 'form-control', placeholder: 'Enter your password', autocomplete: 'off' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit 'Log in', class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>