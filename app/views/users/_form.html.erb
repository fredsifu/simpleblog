<%= render 'shared/errors', obj: @user %>

<div class="row">
  <div class="class-xs-12">
    <%= form_for @user, html: { class: 'form-horizontal', role: 'form' } do |f| %>
      <div class="form-group">
        <%= f.label :username, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.text_field :username, class: 'form-control', placeholder: 'Enter a unique username', autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :email, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.email_field :email, class: 'form-control', placeholder: 'Enter a unique email address, ex.: johndoe@example.com' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, class: 'control-label col-sm-2' %>
        <div class="col-sm-10">
          <%= f.password_field :password, class: 'form-control', placeholder: 'Enter a password' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit(@user.new_record? ? 'Sign up' : 'Update profile', class: 'btn btn-primary') %>
        </div>
      </div>
    <% end %>
  </div>
</div>